<script src="@Url.Content("~/assets/js/jquery.min.js")"></script>
<div class="content-page">
    <!-- Start content -->
    <div class="content">

        <div class="container">

            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-primary">
                        <div class="panel-body">

                            <h4 class="page-title">Vehicle User Allocation</h4>

                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-primary">
                        <div class="panel-body">

                            <div class="card-block">

                                @foreach (var vehicle in ViewBag.Vehicle)
                                {

                                    <div class="col-lg-6" style="float:left">
                                        <h3>@vehicle.Brand <span style="font-size:12px;font-weight:bold"> </span></h3>
                                    </div>
                                    <div class="col-lg-1" style="float:right">
                                        <a class="pcoded-badge label label-warning pull-right" href="@Url.Content("~/Vehicle/Available")">Change</a>
                                    </div>


                                    <table class="table">
                                        <tr>
                                            <th>Name</th>
                                            <th>Vehicle Group</th>
                                            <th>Vehicle Type</th>
                                            <th>Registration No.</th>

                                        </tr>
                                        <tr>
                                            <td>@vehicle.VehicleNoName</td>
                                            <td>@vehicle.VehicleGroup</td>
                                            <td>@vehicle.VehicleType</td>
                                            <td>@vehicle.RegistrationNo</td>

                                        </tr>
                                        <tr>
                                            <td colspan="4">
                                                <b>Note:-</b><br />
                                                @vehicle.Note
                                            </td>
                                        </tr>
                                    </table>
                                }




                            </div>



                        </div>
                    </div>
                </div>
            </div>


            <div class="row">

                <div class="col-md-12">
                    <div class="panel panel-primary">
                        <div class="panel-body">
                            @foreach (var user in ViewBag.User)
                            {

                                <div class="col-lg-6" style="float:left">
                                    <h4>@user.Name</h4>
                                </div>
                                <div class="col-lg-1" style="float:right">
                                    <a class="pcoded-badge label label-warning " href="@Url.Content("~/User/"+user.UserType)">Change</a>
                                </div>

                                <br /><br />

                                <table class="table">
                                    <tr>
                                        <th>@user.UserType</th>
                                        <th>Email ID</th>
                                        <th>National ID</th>
                                        <th>Mobile No.</th>
                                    </tr>
                                    <tr>
                                        <td>
                                            @user.Name
                                        </td>
                                        <td>@user.EmailID</td>
                                        <td>@user.NationalID</td>
                                        <td>@user.MobileNo</td>

                                    </tr>

                                </table>
                            }

                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-primary">
                        <div class="panel-body">

                            @using (Html.BeginForm())
                            {
                                <div class="card">

                                    <div class="card-block">
                                        <div class="row">
                                            <div class="col-sm-12 col-xl-2 m-b-30">
                                                <h4 class="sub-title">Start Date</h4>
                                                <input   class="form-control"   type="datetime-local" name="startdate"  /><br />
                                                <input type="hidden" name="userid" value="@ViewBag.UserID" />
                                                <input type="hidden" name="vehicleid" value="@ViewBag.VehicleID" />
                                                
                                                <h4 class="sub-title">Notes</h4>
                                                <textarea name="notes" class="col-sm-12"></textarea>
                                                <br />

                                                <h4 class="sub-title">&nbsp;</h4>
                                                <button class="btn btn-danger" data-toggle="modal" href="#VehicleGroupModal"><i class="icofont icofont-ui-social-link"></i>Allocate Vehicle to User</button>

                                            </div>
                                        </div>

                                    </div>
                                </div>
                            }


                        </div>
                    </div>


                </div>
            </div>

        </div>









    </div>
</div>



<script>
    $(document).ready(function () { $(".editrow").hide(); });
    function openrow(row) { $("#edit-" + row).show(2000); }
</script>


@if (ViewBag.Allocated == "TRUE")
{
    <script type="text/javascript">
        $(window).on('load', function () {
            $('#ConfirmModal').modal('show');
        });
    </script>
    <div class="modal modal-dialog-center" id="ConfirmModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog ">
            <div class="modal-content-wrap">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">Vehicle User Allocation</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>

                    </div>
                    <div class="modal-body">
                        <p>You've successfully allocated the Vehicle to the User.</p>
                        <br />

                        <a href="@Url.Content("~/VehicleDetails/"+ViewBag.VehicleID)" class="btn btn-warning btn-round right">Continue</a>
                        <br />
                        <br />
                    </div>

                </div>
            </div>
        </div>
    </div>
}

