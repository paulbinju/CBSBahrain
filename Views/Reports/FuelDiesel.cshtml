

@{
    ViewBag.Title = "Report Diesel";
}

<script src="@Url.Content("~/assets/js/jquery.min.js")"></script>
<link href="@Url.Content("~/assets/plugins/datatables/jquery.dataTables.min.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/assets/plugins/datatables/buttons.bootstrap.min.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/assets/plugins/datatables/dataTables.bootstrap.min.css")" rel="stylesheet" type="text/css" />

<script src="@Url.Content("~/assets/js/jquery.min.js")"></script>
<div class="content-page">
    <!-- Start content -->
    <div class="content">

        <div class="container">

            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-primary">
                        <div class="panel-body">
                            <div class="col-md-8 pull-right">
                                @using (Html.BeginForm("FuelDieselGen", "Reports"))
                                {
                                    <div class="col-md-4">Start Date <input name="startdate" type="date" class="form-control col-md-4" value="@ViewBag.Startdate.ToString("yyyy-MM-dd")" /></div>
                                    <div class="col-md-4">End Date <input name="enddate" type="date" class="form-control col-md-4" value="@ViewBag.Enddate.ToString("yyyy-MM-dd")" /></div>
                                    <div class="col-md-4"><br /><input type="submit" value="Generate Report" class="btn btn-danger" /></div>
                                }
                            </div>
                            <h4 class="page-title">Report: Diesel</h4>
                            <p style="color:white">From @ViewBag.Startdate.ToString("dd-MM-yyyy") to @ViewBag.Enddate.ToString("dd-MM-yyyy")</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>



        <div class="page-content-wrapper ">

            <div class="container">



                <div class="row">
                    <div class="col-md-12">
                        <div class="panel panel-primary">
                            <div class="panel-body">





                                <table id="datatable-buttons" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>

                                            <th>Filling Date</th>
                                            <th>Vehicle</th>
                                            <th>Reg No.</th>

                                            <th>Quantity (Litre)</th>
                                            <th style="text-align:right">Amount (@Session["Currency"])</th>
                                        </tr>
                                    </thead>
                                    @foreach (var rpt in ViewBag.Report)
                                    {
                                        <tr>

                                            <td>@rpt.FillingDate.ToString("dd-MMM-yyyy")</td>
                                            <td>@rpt.AutoBrand</td>
                                            <td>@rpt.RegistrationNo</td>

                                            <td>@rpt.Quantity</td>
                                            <td style="text-align:right">@rpt.Amount</td>
                                        </tr>
                                    }


                                </table>


                            </div>
                        </div>
                    </div>

                </div>


            </div>
        </div>
    </div>
</div>



<script src="@Url.Content("~/assets/plugins/datatables/jquery.dataTables.min.js")"></script>
