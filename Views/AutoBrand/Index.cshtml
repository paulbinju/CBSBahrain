@model IEnumerable<Fleetmanager.Models.AutoBrand_T>

@{
    ViewBag.Title = "Auto Brand";
}


<script src="@Url.Content("~/assets/js/jquery.min.js")"></script>
<div class="content-page">
    <!-- Start content -->
    <div class="content">

        <div class="container">

            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-primary">
                        <div class="panel-body">
                            <button class="btn btn-primary pull-right" data-toggle="modal" href="#AutoBrandModal"><i class="icofont icofont-ui-add"></i>Add Auto Brand</button>
                            <h4 class="page-title">Auto Brand</h4>

                        </div>
                    </div>
                </div>
            </div>
        </div>



        <div class="page-content-wrapper ">

            <div class="container">



                <div class="row">
                    <div class="col-md-12">
                        <div class="panel panel-primary">
                            <div class="panel-body">



                                <table class="table">


                                    <tr>
                                        <td><b>Make</b></td>
                                        <td><b>Model</b></td>
                                        <td><b>Year of Manufacture</b></td>
                                        <td></td>
                                    </tr>

                                    @foreach (var item in Model)
                                    {
                                        <tr>

                                            <td>

                                                @Html.DisplayFor(modelItem => item.Make)
                                            </td>
                                            <td>

                                                @Html.DisplayFor(modelItem => item.Model)
                                            </td>
                                            <td>

                                                @Html.DisplayFor(modelItem => item.Year)
                                            </td>
                                            <td>
                                                <a onclick="openrow(@item.AutoBrandID)" style="cursor:pointer" class="pcoded-badge label label-warning"><i class="fa fa-pencil"></i> Edit</a>

                                            </td>
                                        </tr>
                                        using (Html.BeginForm("Edit", "AutoBrand"))
                                        {
                                            @Html.AntiForgeryToken()
                                            @Html.ValidationSummary(true)
                                            <tr id="edit-@item.AutoBrandID" class="editrow">
                                                <td>

                                                    <input class="form-control cke_required" type="text" name="Make" value="@item.Make" required />

                                                </td>
                                                <td>
                                                    <input class="form-control cke_required" type="text" name="Model" value="@item.Model" required />

                                                    <input type="hidden" name="AutoBrandID" value="@item.AutoBrandID" />

                                                <td>

                                                    <input class="form-control cke_required" type="number" name="Year" value="@item.Year" required />

                                                </td>
                                                <td>
                                                    <button class="pcoded-badge label label-success"><i class="fa fa-check"></i> Update</button>


                                                </td>
                                            </tr>
                                        }
                                    }






                                </table>


                            </div>
                        </div>
                    </div>

                </div>


            </div>

        </div>
    </div>
</div>
<script>
    $(document).ready(function () { $(".editrow").hide(); });
    function openrow(row) { $("#edit-" + row).show(2000); }
</script>



<div class="modal fade modal-dialog-center" id="AutoBrandModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content-wrap">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">Add Auto Brand</h4>
                </div>

                @using (Html.BeginForm("Create", "AutoBrand"))
                {

                    <div class="modal-body">


                        @Html.AntiForgeryToken()

                        <div class="form-horizontal col-md-12">

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                            <div class="form-group">

                                <div class="col-md-12">
                                    Make<br />
                                    <input type="text" class="form-control" name="Make" required />
                                    <br />Model<br />
                                    <input type="text" class="form-control" name="Model" required />
                                    <br />Year<br />
                                    <input type="number" class="form-control" name="year" required />

                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-10">
                                    <input type="submit" value="Create" class="btn btn-danger" />
                                </div>
                            </div>
                        </div>


                    </div>
                    <br style="clear:both" />
                                <div class="modal-footer">

                                </div>
                }
            </div>
        </div>
    </div>
</div>






<script src="@Url.Content("~/assets/js/bootstrap.min.js")"></script>
<script src="@Url.Content("~/assets/js/modernizr.min.js")"></script>
<script src="@Url.Content("~/assets/js/detect.js")"></script>
<script src="@Url.Content("~/assets/js/fastclick.js")"></script>
<script src="@Url.Content("~/assets/js/jquery.slimscroll.js")"></script>
<script src="@Url.Content("~/assets/js/jquery.blockUI.js")"></script>
<script src="@Url.Content("~/assets/js/waves.js")"></script>
<script src="@Url.Content("~/assets/js/wow.min.js")"></script>
<script src="@Url.Content("~/assets/js/jquery.nicescroll.js")"></script>
<script src="@Url.Content("~/assets/js/jquery.scrollTo.min.js")"></script>
<script src="@Url.Content("~/assets/js/app.js")"></script>

