<script src="@Url.Content("~/assets/js/jquery.min.js")"></script>
<link href="@Url.Content("~/assets/plugins/datatables/jquery.dataTables.min.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/assets/plugins/datatables/buttons.bootstrap.min.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/assets/plugins/datatables/dataTables.bootstrap.min.css")" rel="stylesheet" type="text/css" />


<div class="content-page">
    <!-- Start content -->
    <div class="content">

        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-primary">
                        <div class="panel-body">

                            <div class="col-md-3">
                                <h4>Call Centre</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


        </div>

        <div class="page-content-wrapper ">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="panel panel-primary">
                            <div class="panel-body">
                                <div class="dt-responsive table-responsive">
                                    <table id="datatable" class="table table-striped table-bordered">
                                        <thead>
                                            <tr>
                                                <th>Call No.</th>
                                                <th>Vehicle</th>
                                                <th>Details</th>
                                                <th>Dates</th>
                                                <th>Note</th>
                                                <th>Modify</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var c in ViewBag.Calls)
                                            {
                                                <tr>
                                                    <td><b>@c.CallID</b></td>

                                                    <td style="font-size:11px;">

                                                        <b>Registration No.</b>  @c.RegistrationNo<br />

                                                        <b>Job Card Generated</b>: @(c.JobCardGenerated == true ? "Yes" : "No")<br />
                                                        <b>Vehicle Name</b>:  @c.VehicleNoName
                                                    </td>
                                                    <td style="font-size:11px;">
                                                        <b>Call User</b>:  @c.Name<br />
                                                        <b>Call Status</b>: @c.Status<br />
                                                        <b>Garage</b>: @(c.External == true ? "External" : "Internal")
                                                        
                                                    </td>
                                                    <td style="font-size:11px;">
                                                        
                                                        <b>Reported On</b>: @c.ReportedOn<br />
                                                        <b>Started On</b>: @c.StartedOn<br />
                                                        <b>Completed On</b>: @c.CompletedOn
                                                    </td>


                                                    <td style="font-size:11px;">
                                                        @c.Note
                                                    </td>
                                                    <td>

                                                        <a class="pcoded-badge label label-warning" data-toggle="modal" href="#CallModal-@c.CallID"><i class="fa fa-time"></i> Edit</a>


                                                    </td>


                                                </tr>

                                                <div class="modal fade modal-dialog-center" id="CallModal-@c.CallID" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                                    <div class="modal-dialog modal-lg">
                                                        <div class="modal-content-wrap">
                                                            <div class="modal-content">
                                                                <div class="modal-header">
                                                                    <h4 class="modal-title">Update Call</h4>

                                                                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                                                </div>
                                                                @using (Html.BeginForm("Edit", "Call"))
                                                                {
                                                                    <input type="hidden" name="CallID" value="@c.CallID" />
                                                                    <input type="hidden" name="VehicleID" value="@c.VehicleID" />
                                                                    <input type="hidden" name="FMUserID" value="@c.FMUserID" />
                                                                    <input type="hidden" name="JobCardGenerated" value="@c.JobCardGenerated" />



                                                                    <div class="modal-body">
                                                                        <div class="form-horizontal col-md-12">
                                                                            <div class="form-group">
                                                                                <div class="col-md-12">
                                                                                    Reported Date<br />
                                                                                    <input type="date" name="ReportedOn" required class="form-control" value="@(c.ReportedOn== null ? ""+c.ReportedOn : ""+c.ReportedOn.ToString("yyyy-MM-dd"))" />

                                                                                </div>
                                                                            </div>
                                                                            <div class="form-group">
                                                                                <div class="col-md-12">
                                                                                    Start Date<br />
                                                                                    <input type="date" name="StartedOn" required class="form-control"  value="@(c.StartedOn== null ? ""+c.StartedOn : ""+c.StartedOn.ToString("yyyy-MM-dd"))"/>

                                                                                </div>
                                                                            </div>
                                                                            <div class="form-group">
                                                                                <div class="col-md-12">
                                                                                    Completed Date<br />
                                                                                    <input type="date" name="CompletedOn"  class="form-control" value="@(c.CompletedOn== null ? ""+c.CompletedOn : ""+c.CompletedOn.ToString("yyyy-MM-dd"))" />

                                                                                </div>
                                                                            </div>
                                                                            <div class="form-group">
                                                                                <div class="col-md-12">
                                                                                    Garage<br />
                                                                                    <input type="radio" @(c.External == true ? "checked":"") name="ExternalGarage" value="true" /> External &nbsp;&nbsp;&nbsp;&nbsp; <input  @(c.External == false ? "checked":"")  type="radio" name="ExternalGarage" value="false" /> Internal

                                                                                </div>
                                                                            </div>
                                                                            <div class="form-group">
                                                                                <div class="col-md-12">
                                                                                    Status<br />
                                                                                    <select class="form-control" name="StatusID">
                                                                                        @foreach (var s in ViewBag.StatusID)
                                                                                        {
                                                                                            <option @(c.StatusID == s.StatusID ? "selected":"")  value="@s.StatusID">@s.Status</option>
                                                                                        }
                                                                                    </select>

                                                                                </div>
                                                                            </div>
                                                                            <div class="form-group">
                                                                                <div class="col-md-12">
                                                                                    Note<br />
                                                                                    <textarea name="Note" class="form-control">@c.Note</textarea>

                                                                                </div>
                                                                            </div>


                                                                            <div class="form-group">
                                                                                <div class=" col-md-10">
                                                                                    <button class="btn btn-danger">Update Call</button>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                }
                                                                <br style="clear:both" />
                                                                <div class="modal-footer">

                                                                </div>

                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        </tbody>

                                    </table>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





