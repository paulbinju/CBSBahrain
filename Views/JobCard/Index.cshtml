<script src="@Url.Content("~/assets/js/jquery.min.js")"></script>
<link href="@Url.Content("~/assets/plugins/datatables/jquery.dataTables.min.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/assets/plugins/datatables/buttons.bootstrap.min.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/assets/plugins/datatables/dataTables.bootstrap.min.css")" rel="stylesheet" type="text/css" />
<div class="content-page">
    <!-- Start content -->
    <div class="content">

        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-primary">
                        <div class="panel-body">

                            <div class="col-md-3">
                                <h4>Job Cards</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


        </div>

        <div class="page-content-wrapper ">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="panel panel-primary">
                            <div class="panel-body">
                                <div class="dt-responsive table-responsive">
                                    <table id="datatable" class="table table-striped table-bordered">
                                        <thead>
                                            <tr>
                                                <th>No.</th>
                                                <th>Job Card</th>
                                                <th>Vehicle</th>
                                                <th>Call Details</th>
                                                
                                                <th>Modify</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var c in ViewBag.Calls)
                                            {
                                                <tr>
                                                    <td><b>@c.JobCardID</b></td>
                                                    <td style="font-size:11px;">
                                                       
                                                        <b>Started Date</b>: @c.JobStarted<br />
                                                        <b>Ended Date</b>: @c.JobEnded<br />
                                                        <b>Labour Hours</b>: @c.LabourHours<br />
                                                        <b>Total Cost</b>: @Session["Currency"] @c.TotalCost<br />


                                                    </td>

                                                    <td style="font-size:11px;">

                                                        <b>Registration No.</b>  @c.RegistrationNo<br />
                                                        <b>Vehicle Name</b>:  @c.VehicleNoName<br /><br />
                                                        <b>Job Card Generated</b>: @(c.JobCardGenerated == true ? "Yes" : "No")
                                                    </td>
                                                    <td style="font-size:11px;">
                                                        <b>Call No.</b>: @c.CallID<br />
                                                        <b>Call User</b>:  @c.Name<br />
                                                        <b>Call Status</b>: @c.Status<br />
                                                        <b>Garage</b>: @(c.External == true ? "External" : "Internal")<br />
                                                        
                                                    </td>
                                                    
                                                    <td>

                                                        <a class="pcoded-badge label label-warning" data-toggle="modal" href="#jobcardModal-@c.JobCardID"><i class="fa fa-time"></i> Edit</a>

                                                        <a class="pcoded-badge label label-danger" href="@Url.Content("~/JobCardDetails/"+ c.JobCardID)"><i class="fa fa-time"></i> Details</a>

                                                    </td>


                                                </tr>

                                                 <div class="modal fade modal-dialog-center" id="jobcardModal-@c.JobCardID" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                                    <div class="modal-dialog modal-lg">
                                                        <div class="modal-content-wrap">
                                                            <div class="modal-content">
                                                                <div class="modal-header">
                                                                    <h4 class="modal-title">Update Job Card</h4>

                                                                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                                                </div>
                                                                @using (Html.BeginForm("Edit", "JobCard"))
                                                                {
                                                                    <input type="hidden" name="JobCardID" value="@c.JobCardID" />
                                                                    <input type="hidden" name="VehicleID" value="@c.VehicleID" />
                                                                    <input type="hidden" name="CallID" value="@c.CallID" />





                                                                    <div class="modal-body">
                                                                        <div class="form-horizontal col-md-12">
                                                                     
                                                                            <div class="form-group">
                                                                                <div class="col-md-12">
                                                                                    Job Started Date<br />
                                                                                    <input type="date" name="JobStarted" required class="form-control" value="@(c.JobStarted== null ? ""+c.JobStarted : ""+c.JobStarted.ToString("yyyy-MM-dd"))" />

                                                                                </div>
                                                                            </div>
                                                                            <div class="form-group">
                                                                                <div class="col-md-12">
                                                                                    Job Ended Date<br />
                                                                                    <input type="date" name="JobEnded" class="form-control" value="@(c.JobEnded== null ? ""+c.JobEnded : ""+c.JobEnded.ToString("yyyy-MM-dd"))" />

                                                                                </div>
                                                                            </div>
                                                                            <div class="form-group">
                                                                                <div class="col-md-12">
                                                                                    Labour Hours<br />
                                                                                    <input type="text" name="LabourHours" class="form-control" value="@c.LabourHours" />
 
                                                                                </div>
                                                                            </div>
                                                             
                                                                            <div class="form-group">
                                                                                <div class="col-md-12">
                                                                                    Total Cost (@Session["Currency"])<br />
                                                                                    <input type="number" step="any" name="TotalCost" class="form-control" value="@c.TotalCost" />

                                                                                </div>
                                                                            </div>


                                                                            <div class="form-group">
                                                                                <div class=" col-md-10">
                                                                                    <button class="btn btn-danger">Update Job Card</button>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                }
                                                                <br style="clear:both" />
                                                                <div class="modal-footer">

                                                                </div>

                                                            </div>
                                                        </div>
                                                    </div>
                                                </div> 
                                            }
                                        </tbody>

                                    </table>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script>
    $(document).ready(function () {
        var table = $('#datatable').DataTable();
        table
            .order([0, 'desc'])
            .draw();
        $('#datatable').attr('data-page-length', 50);
    });
</script>



