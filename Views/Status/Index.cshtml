@model IEnumerable<Fleetmanager.Models.Status_T>

@{
    ViewBag.Title = "Status";
}
 
<script src="@Url.Content("~/assets/js/jquery.min.js")"></script>
<div class="content-page">
    <!-- Start content -->
    <div class="content">

        <div class="container">

            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-primary">
                        <div class="panel-body">
                            <button class="btn btn-primary pull-right" data-toggle="modal" href="#StatusModal"><i class="icofont icofont-ui-add"></i>Add Status</button>
                            <h4 class="page-title">Status</h4>

                        </div>
                    </div>
                </div>
            </div>
        </div>



        <div class="page-content-wrapper ">

            <div class="container">



                <div class="row">
                    <div class="col-md-12">
                        <div class="panel panel-primary">
                            <div class="panel-body">





                                <table class="table">
                                    <tr>
                                        <th>Status Type</th>
                                        <th>Status</th>
                                        <th>Modify</th>
                                    </tr>

                                    @foreach (var item in ViewBag.Status)
                                    {
                                        <tr>
                                            <td>
                                                @item.StatusType
                                            </td>
                                            <td>
                                                @item.Status
                                            </td>
                                            <td>
                                                <a onclick="openrow(@item.StatusID)" style="cursor:pointer" class="pcoded-badge label label-warning"><i class="fa fa-pencil"></i> Edit</a>

                                            </td>
                                        </tr>
                                        using (Html.BeginForm("Edit", "Status"))
                                        {
                                            @Html.AntiForgeryToken()
                                            @Html.ValidationSummary(true)
                                            <tr id="edit-@item.StatusID" class="editrow">
                                                <td>
                                                   <select class="form-control" name="StatusTypeID">
                                                       @foreach (var st in ViewBag.StatusType)
                                                       {
                                                        <option value="@st.StatusTypeID">@st.StatusType</option>
                                                       }
                                                   </select>
                                                </td>


                                                <td>
                                                    <input required class="form-control cke_required" type="text" name="Status" value="@item.Status" />
                                                    <input type="hidden" name="StatusID" value="@item.StatusID" />
                                                </td>
                                                <td>

                                                    <button class="pcoded-badge label label-success"><i class="fa fa-check"></i> Update</button>

                                                </td>
                                            </tr>
                                        }
                                    }


                                </table>


                            </div>
                        </div>
                    </div>

                </div>


            </div>
        </div>
    </div>
</div>



<script>
    $(document).ready(function () { $(".editrow").hide(); });
    function openrow(row) { $("#edit-" + row).show(2000); }
</script>



<div class="modal fade modal-dialog-center" id="StatusModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content-wrap">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">Add Status</h4>
                </div>

                @using (Html.BeginForm("Create", "Status"))
                {

                    <div class="modal-body">


                       

                        <div class="form-horizontal col-md-12">

                            

                            <div class="form-group">

                                <div class="col-md-12">
                                    Status Type<br />
                                    <select class="form-control" name="StatusTypeID">
                                        @foreach (var st in ViewBag.StatusType)
                                        {
                                            <option value="@st.StatusTypeID">@st.StatusType</option>
                                        }
                                    </select>



                                </div>
                            </div>

                            <div class="form-group">

                                <div class="col-md-12">
                                    Status<br />
                                    <input type="text" class="form-control" name="Status" required />

                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-12">
                                    <input type="submit" value="Create" class="btn btn-danger" />
                                </div>
                            </div>
                        </div>


                    </div>
                    <br style="clear:both" />
                    <div class="modal-footer">

                    </div>
                }
            </div>
        </div>
    </div>
</div>


<script src="@Url.Content("~/assets/js/bootstrap.min.js")"></script>
<script src="@Url.Content("~/assets/js/modernizr.min.js")"></script>
<script src="@Url.Content("~/assets/js/detect.js")"></script>
<script src="@Url.Content("~/assets/js/fastclick.js")"></script>
<script src="@Url.Content("~/assets/js/jquery.slimscroll.js")"></script>
<script src="@Url.Content("~/assets/js/jquery.blockUI.js")"></script>
<script src="@Url.Content("~/assets/js/waves.js")"></script>
<script src="@Url.Content("~/assets/js/wow.min.js")"></script>
<script src="@Url.Content("~/assets/js/jquery.nicescroll.js")"></script>
<script src="@Url.Content("~/assets/js/jquery.scrollTo.min.js")"></script>
<script src="@Url.Content("~/assets/js/app.js")"></script>