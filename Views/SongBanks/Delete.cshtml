@model CBSBahrainMVC.Models.SongBank

@{
    ViewData["Title"] = "Delete";
}

 

<h3>Are you sure you want to delete this?</h3>
 


<div class="content-page">
    <!-- Start content -->
    <div class="content">

        
            <div class="page-header-title">

                <div class="pull-right">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="SongId" />
                        <input type="submit" value="Delete" class="btn btn-danger" />  <a asp-action="Index" class="btn btn-warning">Back </a>
                    </form>
                </div>

                <h4 class="page-title">Song</h4>
            </div>
        

        <div class="page-content-wrapper ">

            <div class="container">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="panel panel-primary">
                            <div class="panel-body">


                                <div class="row">


                                    <div class="col-md-12">
                                        <div class="panel panel-primary">
                                            <div class="panel-body">

                                                <div class="row">
                                                    <div class="col-xs-12">
                                                        <h3> @Html.DisplayFor(model => model.Title)</h3>
                                                        <br />
                                                        <b>Category:</b> @Model.Category.Category1
                                                        <br />
                                                        <b>Youtube URL</b> : @Html.DisplayFor(model => model.YoutubeUrl)
                                                        <br />
                                                        @try
                                                        {
                                                        <iframe width="560" height="315" src="https://www.youtube.com/embed/@Model.YoutubeUrl.Replace("https://www.youtube.com/watch?v=", "")" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                                                        }
                                                        catch { }
                                                        <br />
                                                        <br />

                                                        <b>Lyrics</b><br />
                                                        @Html.Raw(Model.Lyrics)

                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>




                                </div> <!-- end row -->
                            </div>
                        </div>
                    </div>
                </div>
                <!-- end row -->




            </div><!-- container -->

        </div> <!-- Page content Wrapper -->

    </div> <!-- content -->



</div>
